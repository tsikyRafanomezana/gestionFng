{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link 
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
        crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

{% endblock %}
{% block content %}
    <div class="container-fluid">
        <h1 class="mb-4">Tatitra ara-bola</h1>

        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon text-bg-primary shadow-sm">
                        <i class="bi bi-gear-fill"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">Sisa an-tanana 2024</span></br>
                        <span class="info-box-number">-</span>
                    </div>
                </div>
            </div>
            {% set totalTypeNiditra = 0 %}
            {% set totalTypeNivoaka = 0 %}
            {% for type in totalParType %}
                {% if type.typeJournal == 0 %}
                    {% set totalTypeNiditra = totalTypeNiditra + type.totalMontant %}
                {% elseif type.typeJournal == 1 %}
                    {% set totalTypeNivoaka = totalTypeNivoaka + type.totalMontant %}
                {% endif %}
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon text-bg-primary shadow-sm">
                        <i class="bi bi-gear-fill"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">
                        {% if type.typeJournal == 0 %}
                            Vola niditra
                        {% elseif type.typeJournal == 1 %}
                            Vola nivoaka
                        {% endif %}
                        </span></br>
                        <span class="info-box-number">{{(type.totalMontant/100)|number_format(0, ',', ' ')}}</span>
                    </div>
                </div>
            </div>
            {% endfor %}
            {% set solde = totalTypeNiditra - totalTypeNivoaka %}
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon text-bg-primary shadow-sm">
                        <i class="bi bi-gear-fill"></i>
                    </span>
                    <div class="info-box-content">
                        <span class="info-box-text">Sisa an-tanana 2025</span></br>
                        <span class="info-box-number">{{(solde/100)|number_format(0, ',', ' ')}}</span>
                    </div>
                </div>
            </div>
            <!-- autres box -->
        </div>
        </br>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">Famintinana isam-bolana</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table m-0" role="table">
                        <thead>
                            <tr>
                            <th scope="col" style="text-align: center">Mois</th>
                            <th scope="col" style="text-align: center">Vola niditra</th>
                            <th scope="col" style="text-align: center">Vola nivoaka</th>
                            <th scope="col" style="text-align: center">Sisa an-tanana</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for type in totalParTypeEtMois %}                            
                            {% set solde = type.totalTypeNiditra - type.totalTypeNivoaka %}
                            <tr>
                                <td style="text-align: center">
                                    <a href="pages/examples/invoice.html" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">{{ type.mois }}</a>
                                </td>
                                <td style="text-align: center">{% if (type.totalTypeNiditra/100) == 0 %}-{% else %}{{(type.totalTypeNiditra/100)|number_format(0, ',', ' ')}}{% endif %}</td>
                                <td style="text-align: center">{{(type.totalTypeNivoaka/100)|number_format(0, ',', ' ')}}</span></td>
                                <td style="text-align: center">{% if solde > 0 %}<span class="badge text-bg-success">{% else %}<span class="badge text-bg-danger">{% endif %}{{(solde/100)|number_format(2, ',', ' ')}}</span></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
